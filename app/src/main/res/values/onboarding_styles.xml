<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="onboarding_input_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/text_input_border</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="onboarding_icon_style">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/app_blue</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="onboarding_instructions_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="input_container_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="splash_ripple_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/app_blue</item>
        <item name="android:background">@drawable/splash_ripple_button</item>
    </style>
</resources>